<div class="row">
  <div class="col-lg-12">
    <div class="taster-header-custom">
      <h3 class="title-3">
        Products
      </h3>
      <div>
       <%= link_to 'New Product', new_admin_product_path %>
      </div>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <div class="table-responsive table--no-card tableFixHead">
          <table class="table" cellspacing="0" width="100%">
            <thead>
              <tr>
                <th>Id</th>
                <th>Name</th> 
                <th>Description</th> 
                <th>Price</th> 
                <th>Category</th> 
                <th colspan="3">Action</th>
              </tr>
            </thead>
            <% @products.each do |product, index|  %>
              <tbody id="<%= product.id%>">
                <tr class="screener accordion-toggle collapsed" data-toggle="collapse" data-target=".<%=product.id%>">
                  <td><%= product.id %></td>
                  <td><%= product.name %></td>
                  <td><%= product.description %></td>
                  <td><%= product.price %></td>
                  <td><%= product.category.name %></td>
                  <td><%= link_to 'Show', admin_product_path(product) %></td>
                  <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
                  <td><%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              </tbody>
            <% end %>
          </table>
         
          <div class="apple_pagination">
            <div class="page_info">
              <%# page_entries_info @surveys %>
            </div>
            <%# will_paginate @surveys %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>