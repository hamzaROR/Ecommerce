<div class="container">
  <h1 class="my-4">Product Detail Page</h1>
  <div class="row">

    <div class="col-md-12">
      <h4 class="my-3"><b>Name:</b>  <%= @product.name %></h4>
    </div>

    <div class="col-md-12">
      <h4 class="my-3"><b>Description:</b>  <%= @product.description %></h4>
    </div>


    <div class="col-md-12">
      <h4 class="my-3"><b>Price:</b>  <%= @product.price %></h4>
    </div>


    <div class="col-md-12">
      <h4 class="my-3"><b>category:</b>  <%= @product.category.name %></h4>
    </div>

  </div>
</div>
