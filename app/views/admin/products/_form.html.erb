
<%= form_for [:admin, @product] do |f| %>

  <div class="form-inputs">
    <%= f.text_field :name %>
  </div>

  <div class="form-inputs">
    <%= f.text_field :description %>
  </div>

  <div class="form-inputs">
    <%= f.number_field :price %>
  </div>

  <div class="form-inputs">
    <%= f.collection_select(:category_id, Category.all, :id, :name) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
