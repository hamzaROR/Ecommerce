<div class="row">
  <div class="col-lg-12">
    <div class="taster-header-custom">
      <h3 class="title-3">
        Categories
      </h3>
      <div>
       <%= link_to 'New Category', new_admin_category_path %>
      </div>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <div class="table-responsive table--no-card tableFixHead">
          <table class="table" cellspacing="0" width="100%">
            <thead>
              <tr>
                <th>Id</th>
                <th>Name</th> 
                <th colspan="2">Action</th>
              </tr>
            </thead>
            <% @categories.each do |category, index|  %>
              <tbody id="<%= category.id%>">
                <tr class="screener accordion-toggle collapsed" data-toggle="collapse" data-target=".<%=category.id%>">
                  <td><%= category.id %></td>
                  <td><%= category.name %></td>
                  <td><%= link_to 'Show', admin_category_path(category) %></td>
                  <td><%= link_to 'Edit', edit_admin_category_path(category) %></td>
                  <td><%= link_to 'Destroy', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              </tbody>
            <% end %>
          </table>
         
          <div class="apple_pagination">
            <div class="page_info">
              <%# page_entries_info @surveys %>
            </div>
            <%# will_paginate @surveys %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>