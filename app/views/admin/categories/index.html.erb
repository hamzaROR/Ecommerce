  <div id="wrapper" class="animate">
    <div class="container-fluid">
      <div class="row">
        <div class="col">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Categories</h5>
              <%= link_to 'New Category', new_admin_category_path %>
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Handle</th>
                     <th scope="col" colspan="3">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% @categories.each do |category, index|  %>
                    <tr>
                        <td><%= category.id %></td>
                        <td><%= category.name %></td>
                        <td><%= link_to 'Show', admin_category_path(category) %></td>
                        <td><%= link_to 'Edit', edit_admin_category_path(category) %></td>
                        <td><%= link_to 'Destroy', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  <% end %>                  
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>