<div id="wrapper" class="animate">
  <div class="container-fluid">
    <div class="row">
      <div class="col">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Users</h5>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Email</th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user|  %>
                  <tr>
                      <td><%= user.id %></td>
                      <td><%= user.email %></td>
                  </tr>
                <% end %>                  
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>